 @model Patient
<form method="post" action="@Url.Action("SupprimerPatient", "Utilisateurs")">
    <div class="border pt-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Créer un Patient </h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="PatientID" class="p-0"></label>
            <input asp-for="PatientID" class="form-control" />
            <span asp-validation-for="PatientID" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Nom" class="p-0"></label>
            <input asp-for="Nom" class="form-control" />
            <span asp-validation-for="Nom" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Prenom" class="p-0"></label>
            <input asp-for="Prenom" class="form-control" />
            <span asp-validation-for="Prenom" class="text-danger"></span>
        </div>
        
       


        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Ajouter </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Analyses" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Retour à la liste
                </a>

            </div>
        </div>

    </div>
</form>



