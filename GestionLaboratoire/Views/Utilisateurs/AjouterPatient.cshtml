 @model GestionLaboratoire.Models.Patient
@{
    ViewData["Title"] = "Ajouter un Patient";
    Layout = "_Layout"; // Utilisez votre layout si nécessaire
}

<form method="post" action="@Url.Action("AjouterPatient", "Utilisateurs")">
    <div class="border pt-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Créer un Patient </h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="PatientID" class="p-0"></label>
            <input asp-for="PatientID" class="form-control" />
            <span asp-validation-for="PatientID" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Nom" class="p-0"></label>
            <input asp-for="Nom" class="form-control" />
            <span asp-validation-for="Nom" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Prenom" class="p-0"></label>
            <input asp-for="Prenom" class="form-control" />
            <span asp-validation-for="Prenom" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Contact" class="p-0"></label>
            <input asp-for="Contact" class="form-control" />
            <span asp-validation-for="Contact" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Email" class="p-0"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="MedecinTraitant" class="p-0"></label>
            <input asp-for="MedecinTraitant" class="form-control" />
            <span asp-validation-for="MedecinTraitant" class="text-danger"></span>
        </div>


        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Ajouter </button>
            </div>
            

            </div>
        </div>

    </div>
</form>



