@{
    ViewData["Title"] = "Accueil - Laboratoire Médical";
    Layout = "_Layout";
}

<div class="home-page">
    <div class="overlay"></div>
    <div class="content">
        <h1>Bienvenue au Laboratoire Médical **</h1>
        <p>Des services de diagnostic précis et fiables, pour vous et vos proches.</p>
    </div>
</div>

@section Styles {
    <style>
        /* La section principale (page d'accueil) */
        .home-page {
            height: 100vh; /* Prend toute la hauteur de l'écran */
            display: flex; /* Utilise flexbox pour centrer */
            justify-content: center; /* Centre horizontalement */
            align-items: center; /* Centre verticalement */
            position: relative;
            background: url('/images/background_blue.jpeg') no-repeat center center fixed;
            background-size: cover;
        }

        /* Superposition pour un effet visuel */
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
        }

        /* Contenu centré */
        .content {
            position: relative;
            z-index: 2; /* Au-dessus de l'overlay */
            text-align: center;
            color: white;
            padding: 20px;
        }

            .content h1 {
                font-size: 3em;
                margin-bottom: 20px;
                color: darkblue; /* Blanc pur */
            }

            .content p {
                font-size: 1.2em;
                color: blue; /* Bleu clair */
            }
    </style>
}
